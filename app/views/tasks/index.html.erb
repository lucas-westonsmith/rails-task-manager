<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p>
    <%= task.completed %> <%= link_to task.title, task_path(task) %>
  </p>
  <%= link_to "Delete this task", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
  <%= link_to "Add a task", new_task_path %>
